{
  "name": "user-management-service",
  "description": "User Management Service",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build && node --experimental-specifier-resolution=node ./dist/index.js",
    "generate": "graphql-codegen --config codegen.yml",
    "dev": "npm run generate && nodemon -x node --no-warnings --experimental-specifier-resolution=node --loader ts-node/esm ./src/index.ts",
    "build": "tsc",
    "test": "jest --detectOpenHandles",
    "prod": "nodemon --es-module-specifier-resolution=node dist/index.js",
    "pm2": "pm2 start ts-node --name app -- -r tsconfig-paths/register ./src/index.ts",
    "permissions": " nodemon -x node --no-warnings --experimental-specifier-resolution=node --loader ts-node/esm ./src/config/saveRolesPermission.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.5.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "connect-mongo": "^5.0.0",
    "cors": "^2.8.5",
    "crypto-random-string": "^5.0.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "graphql": "^16.6.0",
    "ioredis": "^5.3.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "nodemailer": "^6.9.1",
    "pidusage": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.3.0",
    "@graphql-codegen/typescript": "^3.0.3",
    "@graphql-codegen/typescript-resolvers": "^3.2.0",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/bcrypt": "^5.0.0",
    "@types/connect-mongo": "^3.1.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.15.11",
    "@types/nodemailer": "^6.4.7",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Next-Empire/user-management-service.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Next-Empire/user-management-service/issues"
  },
  "homepage": "https://github.com/Next-Empire/user-management-service#readme"
}
