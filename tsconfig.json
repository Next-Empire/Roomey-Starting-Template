{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "types": ["node"],
    "experimentalDecorators": true
  },
  "include": ["./src/**/*", "tests"],
  "exclude": ["node_modules"]
}
